<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyPageFragment"
    android:background="#FFFAF1">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/mypage_title"
        android:layout_height="0dp"
        android:layout_marginLeft="22dp"
        android:fontFamily="@font/bebasneue_regular"
        android:gravity="center_vertical"
        android:text="@string/my_page"
        android:textAppearance="@style/mission"
        tools:targetApi="jelly_bean"
        android:layout_width="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:background="@drawable/mypage_background_box"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2.5">
      <ImageView
          android:id="@+id/mypage_image_character"
          android:layout_width="100dp"
          android:layout_height="200dp"
          android:layout_gravity="center_vertical"/>
      <LinearLayout
          android:paddingLeft="30dp"
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <TextView
            android:id="@+id/mypage_text_name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/brown"
          android:text="name"/>
        <TextView
            android:id="@+id/mypage_text_score"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="@color/brown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:text="0/100"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


      <Button
          android:id="@+id/mypage_button_survey"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:background="@drawable/button_background3"
          android:gravity="center_vertical"
          android:padding="20dp"
          android:text="Depression test again"
          android:textAppearance="@style/my_page_button_text" />
      <Button
          android:id="@+id/mypage_button_resign"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:background="@drawable/button_background3"
          android:gravity="center_vertical"
          android:padding="20dp"
          android:text="Delete account"
          android:textAppearance="@style/my_page_button_text" />
      <Button
          android:id="@+id/mypage_button_about_us"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:background="@drawable/button_background3"
          android:gravity="center_vertical"
          android:padding="20dp"
          android:text="About us"
          android:textAppearance="@style/my_page_button_text" />

      <Button
          android:id="@+id/mypage_button_leave"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:background="@drawable/button_background3"
          android:gravity="center_vertical"
          android:padding="20dp"
          android:text="Exit"
          android:textAppearance="@style/my_page_button_text" />
    </LinearLayout>

  </LinearLayout>

</FrameLayout>