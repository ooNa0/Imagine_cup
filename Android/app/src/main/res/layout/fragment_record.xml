<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RecordFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/bebasneue_regular"
            android:gravity="top"
            android:text="@string/record"
            android:textAppearance="@style/mission"
            tools:targetApi="jelly_bean"
            android:layout_marginStart="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/month_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue_regular"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:text=""
                android:textAppearance="@style/record"
                android:layout_marginStart="22dp">
            </Button>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/select_day_and_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"/>

        </LinearLayout>

        <View
            android:background="@drawable/color_line"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="0.5dp"
            />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

</FrameLayout>