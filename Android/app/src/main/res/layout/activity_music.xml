<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mission.Music"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/mission"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:fontFamily="@font/bebasneue_regular"
        android:gravity="center"
        android:text="@string/mission"
        android:textAppearance="@style/mission"
        tools:targetApi="jelly_bean"
        android:layout_marginStart="22dp"/>

    <TextView
        android:id="@+id/music_text_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:autoSizeMaxTextSize="40sp"
        android:paddingLeft="22dp"
        android:paddingRight="30dp"
        android:text="Let's Meditate"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youTubePlayerView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <Button
        android:id="@+id/youtubeBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:text="Play"
        android:drawableTop="@drawable/play_black"
        android:background="@null"
        android:textColor="#000000"
        android:layout_gravity="center"/>
    <Button
        android:layout_marginTop="10sp"
        android:id="@+id/music_button_clear"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Clear"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/brown"
        android:textColor="@color/white"
        />

</LinearLayout>