<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mission.Pedometer"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pedometer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="50sp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/pedometer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk 50 or more times"
            android:layout_gravity="center"
            android:textAppearance="@style/mission"
            tools:targetApi="jelly_bean"
            android:autoSizeMaxTextSize="50dp"
            android:fontFamily="@font/bebasneue_regular"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="50dp"
            android:layout_weight="2"
            android:fontFamily="@font/bebasneue_regular"
            android:gravity="center"
            android:text="@string/step_count"
            android:textAppearance="@style/mission"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/pedometer_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/pedometer_complete_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/mission"
            android:textSize="50sp" />

    </LinearLayout>

    <Button
        android:id="@+id/pedometer_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/button_background2"
        android:text="Clear"
        android:autoSizeMaxTextSize="50dp"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="2"
        />
</LinearLayout>