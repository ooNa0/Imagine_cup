<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mission.Camera"
    android:orientation="vertical"
    android:paddingLeft="30sp"
    android:paddingRight="30sp"
    android:weightSum="6"
    android:backgroundTint="@color/background"
    >

    <TextView
        android:id="@+id/mission"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/bebasneue_regular"
        android:gravity="center"
        android:text="@string/mission"
        android:textAppearance="@style/mission"
        tools:targetApi="jelly_bean" />

    <TextView
        android:text="Take a picture of \nsmiling"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        android:textSize="40sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:textStyle="bold"/>

    <ImageView
        android:src="@drawable/cameradefault"
        android:id="@+id/camera_imageview"
        android:layout_width="310dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:scaleType="fitXY"
        android:layout_gravity="center" />
        <Button
            android:drawableStart="@drawable/camera"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/brown"
            android:id="@+id/camera_button_take_picture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="15sp"
            android:text="Take a picture"
            android:textColor="@color/white"
            android:paddingLeft="100sp"
            android:paddingRight="100sp"
            android:layout_marginBottom="15sp"
            />
    <Button
        android:id="@+id/camera_button_clear"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Clear"
        android:layout_marginBottom="50dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="15sp"
        android:backgroundTint="@color/brown"
        android:textColor="@color/white"
        />
</LinearLayout>